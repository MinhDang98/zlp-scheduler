%html
  %head
    %title ZLP Class Scheduler
    = stylesheet_link_tag 'application', 'media' => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %body
      %div{:class => "header_div"}
        = link_to "Log out", logout_path, method: "delete", :class => 'topright'
        = link_to image_tag("tamu_zlp_logo.png", class: "header"), "/"
      // not sure what does this do
      // - unless params[:action] == 'new'
      // = link_to "Log out", logout_path, method: "delete", :class => 'topright'
      %div.container
        #main
          - if flash[:notice]
            %div.notice
              #notice.message= flash[:notice]
          - elsif flash[:warning]
            %div.warning
              #warning.message= flash[:warning]
          = yield
