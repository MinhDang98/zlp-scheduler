%html
  %head
    %link{:href => "result.css", :rel => "stylesheet"}/
    %title Admin View Result
  %body
    %h1{:style => "text-align:center"} Algorithm Result
    %h3{:style => "text-align:left"}
      Non-conflicted Time Slots
    %table#resultTable
      %tr
        %th#special_table_header Day
        %th#special_table_header Time
        %th#special_table_header Option
      -@results.each do |each|
        %tr
          %td#special_table_data each.day
          %td#special_table_data each.time
          %td#special_table_data
            %form
              %button.choosebtn{:formaction => "view_conflicts"} Choose

      %tr
        %td#special_table_data Wednesday
        %td#special_table_data 1:45 PM - 3:45 PM
        %td#special_table_data
          %form
            %button.choosebtn{:formaction => "view_conflicts"} Choose
      %tr
        %td#special_table_data Friday
        %td#special_table_data 1:45 PM - 3:45 PM
        %td#special_table_data
          %form
            %button.choosebtn{:formaction => "view_conflicts"} Choose
    %h3{:style => "text-align:left"}
      Conflicted Time Slots
    %table#conflictTable
      %tr
        %th#special_table_header Day
        %th#special_table_header Time
        %th#special_table_header Option
      -@conflict.each do |conf|
        %tr
          %td#special_table_data conf.day
          %td#special_table_data conf.time
          %td#special_table_data
            %form
              %button.detailbtn{:formaction => "view_conflicts"} Details
      %tr
        %td#special_table_data Monday
        %td#special_table_data 3:45 PM- 5:00 PM
        %td#special_table_data
          %form
            %button.detailbtn{:formaction => "view_conflicts"} Details
      %tr
        %td#special_table_data Tuesday
        %td#special_table_data 8:00 AM- 10:00 AM
        %td#special_table_data
          %form
            %button.detailbtn{:formaction => "view_conflicts"} Details
      %tr
        %td#special_table_data Tuesday
        %td#special_table_data 10:00 AM - 12:00 PM
        %td#special_table_data
          %form
            %button.detailbtn{:formaction => "view_conflicts"} Details
      %tr
        %td#special_table_data Wednesday
        %td#special_table_data 8:00 AM - 10:10 AM
        %td#special_table_data
          %form
            %button.detailbtn{:formaction => "view_conflicts"} Details